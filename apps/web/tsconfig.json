{
  "extends": "@websolute/tsconfig/tsnext.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".scripts/mock.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@components*": ["src/@components*"],
      "@components": ["src/@components/index"],
      "@config*": ["src/@config*"],
      "@config": ["src/@config/index"],
      "@hooks*": ["src/@hooks*"],
      "@hooks": ["src/@hooks/index"],
      "@models*": ["src/@models*"],
      "@models": ["src/@models/index"],
    },
  },
}
